<div class="jumbotron">
    <p class="lead">
        <h1>@ViewBag.Title</h1>
    </p>
</div>
<div><a href="/Vagas/Adicionar" class="btn btn-primary btn-lg">Adicionar Vaga &raquo;</a></div>
<div><h2>Vagas adicionadas recentemente:</h2></div>
<br />
<div class="row">
    @foreach (var item in ViewBag.Lista)
    {
        <div class="col-md-4 card">
            <h2>@item.Nome</h2>
            <p>
                Descrição: @item.Descricao.
            </p>
            <p>Criador da vaga: Google</p>
            <p>Link/Email para contato: <a href="https://www.google.com">google.com</a></p>
            <h4>Valor: @item.Valor</h4>
            <p><a class="btn btn-default" href="/Vagas/Editar/@item.Id">Editar vaga &raquo;</a></p>
            <p><a class="btn btn-default" href="/Vagas/Excluir/@item.Id">Excluir vaga &raquo;</a></p>
        </div>
    }
</div>